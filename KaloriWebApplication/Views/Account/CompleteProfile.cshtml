@model KaloriWebApplication.Models.Concrete.CustomersProfile

@{
    ViewData["Title"] = "Complete Profile";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card mt-5">
                <div class="card-header bg-info text-white">
                    <h2 class="text-center">Complete Your Profile</h2>
                </div>
                <div class="card-body">
                    <form asp-action="CompleteProfile" method="post">
                        <div class="form-group">
                            <label asp-for="Name" class="text-info">Name</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Age" class="text-info">Age</label>
                            <input asp-for="Age" class="form-control" />
                            <span asp-validation-for="Age" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Gender" class="text-info">Gender</label>
                            <input asp-for="Gender" class="form-control" />
                            <span asp-validation-for="Gender" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Height" class="text-info">Height</label>
                            <input asp-for="Height" class="form-control" />
                            <span asp-validation-for="Height" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Weight" class="text-info">Weight</label>
                            <input asp-for="Weight" class="form-control" />
                            <span asp-validation-for="Weight" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ActivityLevel" class="text-info">Activity Level</label>
                            <input asp-for="ActivityLevel" class="form-control" />
                            <span asp-validation-for="ActivityLevel" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Goal" class="text-info">Goal</label>
                            <input asp-for="Goal" class="form-control" />
                            <span asp-validation-for="Goal" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="DailyCaloryLimit" class="text-info">Daily Calory Limit</label>
                            <input asp-for="DailyCaloryLimit" class="form-control" />
                            <span asp-validation-for="DailyCaloryLimit" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-info btn-block">Save Profile</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
