@{
    ViewData["Title"] = "Dashboard";
}
<style>
    .content{
        background-color: rgba(192, 192, 192, 0.3);
    }
</style>

<div class="menu-icon" onclick="toggleMenu()">
    &#9776;
</div>

<div class="menu" id="menu">
    <a asp-controller="Profile" asp-action="ProfileEditing">Profil</a>
    <a asp-controller="Nutrient" asp-action="NutrientSelect">Besin Girişi</a>
    <a asp-controller="Profile" asp-action="ProfileEditing">Günlük-Haftalık Raporlar</a>
    <a asp-controller="Account" asp-action="ProfileUpdating">Bildirimler</a>
</div>
<div class="content">
    <button id="showNutrientsButton" class="btn btn-primary">Eklenilen Besinleri Göster</button>
    <div id="nutrientsTable" style="display:none;">
        <h2>Eklenilen Besinler</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>Tarih</th>
                    <th>Besin</th>
                    <th>Miktar (gram)</th>
                    <th>Kalori (100 gram başına)</th>
                </tr>
            </thead>
            <tbody id="nutrientsBody">
                <!-- Besin kayıtları buraya eklenecek -->
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="4" style="text-align:right;"><strong>Toplam Kalori:</strong></td>
                    <td id="totalCalories" style="font-weight:bold;"></td>
                </tr>
            </tfoot>
        </table>
    </div>
</div>

@section Scripts {
    <script src="~/js/site.js"></script>
    <script>
        $(document).ready(function () {
            $('#showNutrientsButton').click(function () {
                $.ajax({
                    url: '@Url.Action("GetUserNutrients", "Nutrient")',
                    type: 'GET',
                    success: function (response) {
                        var nutrientsBody = $('#nutrientsBody');
                        nutrientsBody.empty();
                        if (response.length > 0) {
                            $.each(response, function (index, item) {
                                var caloriesPer100Grams = parseInt(item.caloryNutrient.cals_per100grams.replace(" cal", "")) || 0;
                                var totalCaloriesPerItem = (item.quantity / 100 * caloriesPer100Grams).toFixed(2);

                                // AJAX request to get total calories for each date
                                $.ajax({
                                    url: '@Url.Action("GetTotalCaloriesByDate", "Nutrient")',
                                    type: 'GET',
                                    data: { date: new Date(item.dateLogged).toISOString().split('T')[0] },
                                    success: function (caloriesResponse) {
                                        var row = '<tr>'
                                            + '<td>' + new Date(item.dateLogged).toLocaleDateString() + '</td>'
                                            + '<td>' + item.caloryNutrient.foodItem + '</td>'
                                            + '<td>' + item.quantity + '</td>'
                                            + '<td>' + caloriesPer100Grams + ' cal</td>'
                                            + '</tr>';
                                        nutrientsBody.append(row);

                                        // Update total calories after appending row
                                        $('#totalCalories').text(caloriesResponse.success ? caloriesResponse.totalCalories : 'Veri bulunamadı');
                                    },
                                    error: function () {
                                        alert('Toplam kalori verilerini çekerken hata oluştu.');
                                    }
                                });
                            });
                            $('#nutrientsTable').show();
                        } else {
                            nutrientsBody.append('<tr><td colspan="5">Kayıt bulunamadı</td></tr>');
                            $('#nutrientsTable').show();
                        }
                    },
                    error: function () {
                        alert('Besin kayıtlarını çekerken hata oluştu.');
                    }
                });
            });
        });
    </script>
}
