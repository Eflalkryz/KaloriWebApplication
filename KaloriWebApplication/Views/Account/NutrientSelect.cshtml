@{
    ViewData["Title"] = "Nutrient Select";
}

<h2>Nutrient Selection</h2>

<form id="nutrientForm" method="post" action="@Url.Action("SaveUserNutrient", "Nutrient")">
    <div class="form-group">
        <label for="categoryDropdown">Select Category:</label>
        <select id="categoryDropdown" class="form-control" name="category">
            <option value="">-- Select Category --</option>
            @foreach (var category in ViewBag.Categories)
            {
                <option value="@category">@category</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="foodItemDropdown">Select Food Item:</label>
        <select id="foodItemDropdown" class="form-control" name="nutrientId">
            <option value="">-- Select Food Item --</option>
        </select>
    </div>

    <div class="form-group">
        <label for="quantityInput">Quantity (grams):</label>
        <input type="number" id="quantityInput" class="form-control" name="quantity" min="0">
    </div>

    <button type="submit" class="btn btn-primary">Save Nutrient</button>
</form>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(function () {
            $('#categoryDropdown').change(function () {
                var category = $(this).val();
                $.ajax({
                    url: '@Url.Action("GetFoodItems", "Nutrient")',
                    type: 'GET',
                    data: { category: category },
                    success: function (response) {
                        var foodItemDropdown = $('#foodItemDropdown');
                        foodItemDropdown.empty(); // Mevcut seçenekleri temizle
                        if (response.length > 0) {
                            $.each(response, function (index, item) {
                                foodItemDropdown.append($('<option>').text(item.name).attr('value', item.id));
                            });
                        } else {
                            foodItemDropdown.append($('<option>').text('-- No Food Items --'));
                        }
                    },
                    error: function () {
                        alert('Error fetching food items.');
                    }
                });
            });
        });
    </script>
}
