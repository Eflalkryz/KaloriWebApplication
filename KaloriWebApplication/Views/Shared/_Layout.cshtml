<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - KaloriWebApplication</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/KaloriWebApplication.styles.css" asp-append-version="true" />

    <style>


        .navbar-brand {
            color: #FFFFFF; /* Beyaz metin */
            font-weight: bold;
        }

        .navbar-nav .nav-link {
            color: #FFFFFF; /* Beyaz metin */
        }

        .navbar-nav .nav-link:hover {
            color: #FFFFFF; /* Beyaz metin */
            background-color: #388E3C; /* Hafifçe koyu yeşil hover arka plan */
            }

        .navbar-toggler-icon {
            background-color: #FFFFFF; /* Beyaz menü simgesi */
        }

        footer {
            background-color: rgba(47, 23, 15, 0.5); /* Açık gri arka plan */
            padding: 10px 0;
            text-align: center;
        }


        body {
            background: linear-gradient(rgba(47, 23, 15, 0.65), rgba(47, 23, 15, 0.65)), url("/lib/deneme.jpeg");
            background-attachment: fixed;
            background-position: center;
            background-size: cover;
        }

        .container-fluid {
            background-color: rgba(255, 255, 255, 0.5); /* White, semi-transparent background */
            padding: 20px;

    </style>
</head>
<body id ="fig">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">KaloriWebApplication</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - KaloriWebApplication - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
